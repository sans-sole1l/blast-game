{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,

    "noImplicitAny": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    }
  },
  "include": ["src"],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
